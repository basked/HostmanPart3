  <persistence-unit name="HostmanPart3PU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>Epam_DB.Cities</class>
    <class>Epam_DB.Subscribers</class>
    <class>Epam_DB.Authors</class>
    <class>Epam_DB.Books</class>
    <class>Epam_DB.Subscriptions</class>
    <class>Epam_DB.Genres</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/epam_db?zeroDateTimeBehavior=convertToNull"/>
